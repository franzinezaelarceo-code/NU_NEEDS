<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/category_fasteners"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FastenersActivity"
    android:background="@drawable/nu_needs_homebg">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3F51B5"
            app:navigationIcon="@drawable/burger_button"
            app:title="Fasteners and Binding"
            app:titleTextColor="@android:color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BINDER CLIP 1.5/8", 12'S/80X -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <!-- REMOVED: tools:ignore="ExtraText" -->

                    <!-- Product Image -->
                    <ImageView
                        android:id="@+id/image_binder_clip_1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@color/cardview_light_background"
                        android:src="@drawable/ic_binder_clip" />

                    <!-- Product Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="BINDER CLIP 1.5/8\,12'S/80X"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <!-- Stock Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/stock_binder_clip_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/bg_in_stock"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <!-- Quantity Controls -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Minus Button -->
                            <ImageView
                                android:id="@+id/btn_minus_binder_clip_1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_minus"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"/>

                            <!-- Quantity Display -->
                            <TextView
                                android:id="@+id/quantity_binder_clip_1"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <!-- Plus Button -->
                            <ImageView
                                android:id="@+id/btn_plus_binder_clip_1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_plus"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- BINDER CLIP JUMBO 2", 12'S/80X -->
