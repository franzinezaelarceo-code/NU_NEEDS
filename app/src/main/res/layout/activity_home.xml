<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- ===== BLANK HOME SCREEN ===== -->

    <!-- ===== SIDE PANEL (Just Log Out button) ===== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nu_needs_homebg">

        <!-- Burger Button -->
        <ImageView
            android:id="@+id/BTN_Burger"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.039"
            app:srcCompat="@drawable/burger_button" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/nu_needs_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="236dp"
            android:layout_height="45dp"
            android:fontFamily="@font/barlow"
            android:text="Welcome to NU Needs!"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Filings"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Filings and Organization"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.304" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Fasteners"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Fasteners and Binding"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.392" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Cutting"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Cutting and Measuring Tool"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.478" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Writing"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Writing and Marking"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.563" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Paper"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Paper Products"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.649" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_Tapes"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Tapes and Packaging"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.735" />

        <TextView
            android:id="@+id/TV_Today"
            android:layout_width="258dp"
            android:layout_height="47dp"
            android:fontFamily="@font/barlow"
            android:text="What to we need today?"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.252" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/side_panel"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:translationX="-250dp">

        <!-- Empty space at top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- LOG OUT BUTTON -->
        <Button
            android:id="@+id/BTN_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#6372d8"
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp" />

    </LinearLayout>
</FrameLayout>